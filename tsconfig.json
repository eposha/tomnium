{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["src/lib/*"],
      "@/fragments/*": ["src/graph/fragments/*"],
      "@/query/*": ["src/graph/query/*"],
      "@/mutations/*": ["src/graph/mutations/*"],
      "@/graph-hooks/*": ["src/graph/hooks/*"],
      "@/components/*": ["src/components/*"],
      "@/constants/*": ["src/constants/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/public/*": ["public/*"],
      "@/types/*": ["src/types/*"]
    },
    "target": "es2015",
    "lib": ["es5", "es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
